<div class="page-title">
    {{pageTitle}}
</div>

{{#ifContains privileges 'create_articles'}}
<a class="button add" href="/new/article"><i class="fa fa-plus"></i> Nouveau</a>
{{/ifContains}}

<div class="list-container">

    {{#each articles}}
    
    <div class="list-element">
        <a href="/article/{{shortName}}" class="list-title">{{name}}</a>
        Par<a href="/user/{{author}}" class="meta user">{{author}}</a>le<div class="meta date">{{stringPublicationDate}}</div>
        <div class="list-extract">{{extract}}...</div>
    
        {{#each tags}}
        <a href="/search?tag={{tag}}" class="meta tag"><i class="fa fa-tag"></i> {{tag}}</a>
        {{/each}}
    
    </div>

    {{/each}}
    
</div>