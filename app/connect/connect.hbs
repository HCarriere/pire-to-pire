
<div class="page-title">
    Identifiez-vous!</div>
    
<div class="article-content">
    <form method="post" action="/connect" class="form-login login" name="connection">
        <h1><i class="fa fa-user"></i> Connexion</h1>
        <label class="input-label" >Nom de compte</label>
        <input type="text" name="username" class="input-text auto-select" placeholder="Nom de compte" required>
        <br>
        <label class="input-label">Mot de passe</label>
        <input type="password" name="password" class="input-text" placeholder="********" required>
        <br>
        <input type="submit" value="Connection" class="button valid">
		<input type="hidden" name="_csrf" value="{{global.csrfToken}}">
        {{#if global.query.error}}
        <div class="alert alert-red">
            <h1>Impossible de se connecter</h1>
            <p>Veuillez vérifier votre nom de compte / mot de passe.</p>
        </div>
        {{/if}}
    </form>
     
    
    <form method="post" action="/subscribe" class="form-login inscription" name="inscription">
        <h1><i class="fa fa-plus"></i> Inscription</h1>
        
        <label class="input-label">
            Nom de compte {{#if special.loginExists}} | {{special.loginExists}}  existe déjà !{{/if}}
        </label>
        <input type="text" name="login" 
               class="input-text {{#if special.loginExists}} error{{/if}}" placeholder="Nom de compte" required>
        
<!--
        <br>
        <label class="input-label">
            Pseudo {{#if special.pseudoExists}} | {{special.pseudoExists}}  existe déjà !{{/if}}
        </label>
        <input type="text" name="pseudo" 
               class="input-text {{#if special.pseudoExists}} error{{/if}}" placeholder="Pseudo" pattern="^[a-zA-Z0-9_]+$" required>
-->
        <label class="input-label">
            Adresse e-mail {{#if special.mailExists}} | {{special.mailExists}} existe déjà !{{/if}}
        </label>
        <input type="email" name="email" 
               class="input-text {{#if special.mailExists}} error{{/if}}" placeholder="Email" required>
        
        <br>
        <label class="input-label">Mot de passe</label>
        <input type="password" name="password" class="input-text" placeholder="********" required>
        
        <br>
        <label class="input-label">Répéter le mot de passe</label>
        <input type="password" name="password2" class="input-text" placeholder="********" required>
        
        <br>
        <input type="submit" value="Inscription" class="button valid">
    </form>
   
    
    {{#if special.accountAdded}}
    <div class="alert alert-green">
        <h1>Compte créé avec succès</h1>
        <p>Un email de confirmation vous a été envoyé. </p>
    </div>
    {{/if}}
    
    {{#if special.notSamePassword}}
    <div class="alert alert-red">
        <h1>Erreur d'inscription</h1>
        <p>Les deux mots de passe ne coincident pas. Veuillez entrer les même mots de passe.</p>
    </div>
    {{/if}}
    
    
    
     
</div>