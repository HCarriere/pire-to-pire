

<div class="page-title">Administration</div>

<div class="bo_menu">
<a class="bo_menuitem" href="/admin">Tableau de bord</a><!--
--><a class="bo_menuitem {{admin.selected.users}}" href="/admin/users">Utilisateurs</a><!--
--><a class="bo_menuitem {{admin.selected.articles}}" href="/admin/articles">Articles</a><!--
--><a class="bo_menuitem {{admin.selected.news}}" href="/admin/news">News</a><!--
--><a class="bo_menuitem {{admin.selected.shareables}}" href="/admin/shareables">Partages</a>
</div>

<div class="article-content">
    <h1>{{admin.title}}</h1>
    
    {{#each admin.buttons}}
        <a href="{{link}}" class="{{class}}">{{label}}</a>
    {{/each}}
    
    <table>
        <tr>
            {{#each admin.columns}}
            <th>{{text}}</th>
            {{/each}}
        </tr>
        {{#each admin.lines}}
        <tr>
            {{#each .}}
            <td>
                {{#if input}}
                    <input type="{{input}}" value="{{text}}" name="{{id}}" id="{{id}}"  form="{{../uid}}"
                       {{#if action}}formaction="{{action}}" {{/if}} 
                       {{#if class}}class="{{class}}"{{/if}} 
                       {{attributes}}>
                {{else}}
                    {{#if link}}
                        <a href="{{link}}" {{#if class}}class="{{class}}"{{/if}} {{attributes}}>{{text}}</a>
                    {{else}}
                        <div {{#if class}}class="{{class}}"{{/if}} {{attributes}}>{{text}}</div>
                    {{/if}}
                {{/if}}
            </td>
            {{/each}}
            <td><form id="{{uid}}" method="post"></form></td>
        </tr>
        {{/each}}
    </table>
    
    
</div>
